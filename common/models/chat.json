{
  "name": "Chat",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "accounts": {
      "type": "hasMany",
      "model": "Account",
      "foreignKey": "",
      "through": "AccountChat"
    },
    "messages": {
      "type": "hasMany",
      "model": "Message",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "chatMember",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "chatMember",
      "property": "__create__messages",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
